@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
<link rel="stylesheet" type="text/css" href="~/css/site.css">

<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>ЕТ/юридическо лице</th>
            <th>Община</th>
            <th>Населено място</th>
            <th>Ул./бул. №</th>
            <th>Дата на закриване</th>
            <th>Основание за закриване</th>
        </tr>
    </thead>
    <tbody>
        @DrugStore.Pages.IndexModel.getInfo()
        @foreach (var element in @DrugStore.Pages.IndexModel.DrugStoresList)
        {
            <tr>
                <td>@element.ElementAt(0)</td>
                <td>@element.ElementAt(1)</td>
                <td>@element.ElementAt(2)</td>
                <td>@element.ElementAt(3)</td>
                <td>@element.ElementAt(4)</td>
                <td>@element.ElementAt(5)</td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>